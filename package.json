  "license": "MIT",
  "dependencies": {
    "express": "^4.17.1",
    "socket.io": "^4.2.0",
    "socket.io-client": "^4.2.0"
  },
  "devDependencies": {
    "esbuild": "^0.12.29",
    "glob": "^7.2.0"
  }
}
